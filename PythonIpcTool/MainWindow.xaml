<!-- Views/MainWindow.xaml -->
<Controls:MetroWindow x:Class="PythonIpcTool.Views.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:PythonIpcTool.Views"
                      xmlns:vm="clr-namespace:PythonIpcTool.ViewModels"
                      xmlns:models="clr-namespace:PythonIpcTool.Models"
                      xmlns:converters="clr-namespace:PythonIpcTool.Converters"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      Title="Python IPC Tool"
                      Height="700" Width="1000"
                      MinHeight="500" MinWidth="800"
                      WindowStartupLocation="CenterScreen"
                      d:DataContext="{d:DesignInstance Type=vm:DesignMainViewModel, IsDesignTimeCreatable=True}">

    <Controls:MetroWindow.Resources>
        <converters:BooleanToInverseConverter x:Key="InverseBooleanConverter"/>
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <converters:LogEntryToColorConverter x:Key="LogEntryToColorConverter"/>
    </Controls:MetroWindow.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- Configuration & Input -->
            <ColumnDefinition Width="*"/>
            <!-- Output Data & Status/Log -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Configuration Section -->
            <RowDefinition Height="*"/>
            <!-- Input Data & Output/Log Sections -->
        </Grid.RowDefinitions>

        <!-- Region 1: Configuration & Input Controls (Left Column) -->
        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                Background="{DynamicResource MahApps.Brushes.Control.Background}"
                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                BorderThickness="1" CornerRadius="5"
                Padding="15" Margin="0 0 10 0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Title -->
                    <RowDefinition Height="Auto"/>
                    <!-- Python Interpreter Path -->
                    <RowDefinition Height="Auto"/>
                    <!-- Python Script Path -->
                    <RowDefinition Height="Auto"/>
                    <!-- IPC Mode Selection -->
                    <RowDefinition Height="*"/>
                    <!-- Input Data Area -->
                    <RowDefinition Height="Auto"/>
                    <!-- Action Buttons -->
                </Grid.RowDefinitions>

                <!-- Configuration Title -->
                <TextBlock Grid.Row="0" Text="Configuration &amp; Input" 
                           Style="{DynamicResource MahApps.Styles.TextBlock.Title}" 
                           Margin="0 0 0 15"/>

                <!-- Python Interpreter Path -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Python Interpreter Path:" VerticalAlignment="Center" Width="150"/>
                    <TextBox Text="{Binding PythonInterpreterPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Controls:TextBoxHelper.Watermark="e.g., C:\Python\Python39\python.exe"
                             Controls:TextBoxHelper.ClearTextButton="True"
                             Width="250" Margin="5 0 0 0" />
                    <Button Content="Browse..." Command="{Binding BrowsePythonInterpreterCommand}" Margin="5 0 0 0"/>
                </StackPanel>

                <!-- Python Script Path -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 0 0 10">
                    <TextBlock Text="Python Script Path:" VerticalAlignment="Center" Width="150"/>
                    <TextBox Text="{Binding PythonScriptPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             Controls:TextBoxHelper.Watermark="e.g., C:\Scripts\my_script.py"
                             Controls:TextBoxHelper.ClearTextButton="True"
                             Width="250" Margin="5 0 0 0"/>
                    <Button Content="Browse..." Command="{Binding BrowsePythonScriptCommand}" Margin="5 0 0 0"/>
                </StackPanel>

                <!-- IPC Mode Selection -->
                <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0 0 0 15">
                    <TextBlock Text="IPC Communication Mode:" Margin="0 0 0 5"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="IpcMode" Content="Standard I/O"
                                     IsChecked="{Binding SelectedIpcMode, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:IpcMode.StandardIO}}"
                                     Margin="0 0 15 0"/>
                        <RadioButton GroupName="IpcMode" Content="Local Socket (Future)"
                                     IsChecked="{Binding SelectedIpcMode, Mode=TwoWay, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static models:IpcMode.LocalSocket}}"
                                     IsEnabled="False"/>
                        <TextBlock Text="(Data Exchanged: JSON format)" VerticalAlignment="Center" Margin="10 0 0 0" Opacity="0.7"/>
                    </StackPanel>
                </StackPanel>

                <!-- Input Data Area -->
                <StackPanel Grid.Row="4" Orientation="Vertical" Margin="0 0 0 15">
                    <TextBlock Text="Input Data (JSON):" Margin="0 0 5 5"/>
                    <TextBox Text="{Binding InputData, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             MinHeight="150" MaxHeight="300"
                             Controls:TextBoxHelper.Watermark="Enter JSON data for Python script here..." />
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Clear Input" Command="{Binding ClearInputCommand}" Margin="0 0 10 0"/>
                    <Button Content="Execute Python Script" 
                            Command="{Binding ExecutePythonScriptCommand}" 
                            Style="{DynamicResource MahApps.Styles.Button.Accent}"/>
                    <Controls:ProgressRing IsActive="{Binding IsProcessing}" Width="20" Height="20" Margin="10 0 0 0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Region 2: Output Data & Status/Log (Right Column) -->
        <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" Margin="10 0 0 0">
            <!-- Output Data Area -->
            <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1" CornerRadius="5"
                    Padding="15" Margin="0 0 0 10" MinHeight="200" MaxHeight="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Output Data from Python Script:" 
                               Style="{DynamicResource MahApps.Styles.TextBlock.Title}" 
                               Margin="0 0 0 10"/>
                    <TextBox Grid.Row="1" Text="{Binding OutputResult, Mode=OneWay}"
                             AcceptsReturn="True" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                             IsReadOnly="True"
                             Controls:TextBoxHelper.Watermark="Output from Python script will appear here..."/>
                </Grid>
            </Border>

            <!-- Status & Log Area -->
            <Border BorderBrush="{DynamicResource MahApps.Brushes.Accent}" BorderThickness="1" CornerRadius="5"
                    Padding="15" MinHeight="150">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Status &amp; Log:" 
                               Style="{DynamicResource MahApps.Styles.TextBlock.Title}" 
                               Margin="0 0 0 10"/>
                    <ListView Grid.Row="1" ItemsSource="{Binding Logs}"
                              ScrollViewer.VerticalScrollBarVisibility="Auto"
                              Background="Transparent" BorderThickness="0">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           Foreground="{Binding Converter={StaticResource LogEntryToColorConverter}}"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>

</Controls:MetroWindow>